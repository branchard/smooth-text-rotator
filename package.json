{
  "name": "smooth-text-rotator",
  "version": "0.0.1",
  "description": "Super simple JS library for rotating text with smooth animations",
  "author": "Branchard <benoit.branchard@gmail.com>",
  "repository": "https://github.com/branchard/smooth-text-rotator",
  "license": "MIT",
  "keywords": [
    "smooth",
    "text",
    "rotator",
    "rotating",
    "slider",
    "browser"
  ],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "browser": "./dist/esbuild/browser.js",
  "scripts": {
    "dev": "vite serve playground",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "esbuild-browser": "esbuild src/browser.ts --bundle --minify --sourcemap=external --outfile=dist/esbuild/browser.js",
    "build-all": "yarn clean && yarn build && yarn esbuild-browser"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "esbuild": "^0.13.8",
    "eslint": "^8.0.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4",
    "vite": "^2.6.10"
  },
  "dependencies": {
    "type-guards": "^0.15.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
