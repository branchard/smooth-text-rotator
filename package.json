{
  "name": "smooth-text-rotator",
  "version": "0.2.1",
  "description": "Super simple JS library for rotating text with smooth animations",
  "author": "B. Branchard <benoit.branchard@gmail.com>",
  "repository": "https://github.com/branchard/smooth-text-rotator",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/branchard/smooth-text-rotator/issues"
  },
  "keywords": [
    "smooth",
    "text",
    "rotator",
    "rotating",
    "slider",
    "browser",
    "frontend"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "dev": "vite serve playground",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "build": "yarn clean && tsc -p tsconfig.json",
    "pages:dev": "vite serve .github/pages",
    "pages:build": "vite build .github/pages"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/marked": "^3.0.2",
    "@types/node": "^16.11.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "highlight.js": "^11.3.1",
    "jest": "^27.3.1",
    "marked": "^3.0.8",
    "sass": "^1.43.4",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4",
    "vite": "^2.6.11"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
